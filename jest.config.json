{
  "verbose": true,
  "collectCoverage": true,
  "coveragePathIgnorePatterns": [
    "/node_modules/"
  ],
  "collectCoverageFrom": [
    "./src/**",
    "!**/assets/**",
    "!**/__tests__/**",
    "!**/__tests__/**/*.(j|t)s",
    "!**/app/**",
    "!**/config/**",
    "!**/database/**",
    "!**/server.(j|t)s",
    "**/models/**",
    "**/models/helpers/**"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 50,
      "functions": 80,
      "lines": 80
    }
  },
  "modulePathIgnorePatterns": ["mocks"]
}