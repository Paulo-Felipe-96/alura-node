{
  "settings": {
    "import/resolver": {
      "alias": [
        ["@root", "./"],
        ["controllers", "./src/controllers"],
        ["helpers", "./src/helpers"]
      ]
    }
  },
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "globals": {
    "it": true,
    "describe": true,
    "before": true,
    "beforeAll": true,
    "beforeEach": true,
    "jest": true,
    "expect": true,
    "test": true
  },
  "rules": {
    "no-async-promise-executor": "off",
    "quotes": [2, "double", "avoid-escape"],
    "no-console": 0,
    "require-atomic-updates": "off",
    "no-useless-escape": "warn",
    "no-unused-vars": "off",
    "no-debugger": "warn",
    "linebreak-style": ["error", "unix"]
  }
}
